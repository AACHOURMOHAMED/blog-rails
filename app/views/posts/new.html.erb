<h1>New Post</h1>

<%= form_with model: @post, url: user_posts_path, data: {turbo: false}, method: :post do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :text %>
    <%= form.text_area :text %>
  </div>

  <div class="actions">
    <%= form.submit "Submit Post" %>
  </div>
<% end %>